{
  "plugins": ["prettier-plugin-solidity"],
  "overrides": [
    {
      "files": "*.sol",
      "options": {
        "bracketSpacing": true,
        "compiler": "0.8.27",
        "parser": "slang",
        "printWidth": 120,
        "proseWrap": "always",
        "singleQuote": false,
        "tabWidth": 4,
        "useTabs": false
      }
    }
  ]
}
